{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:allow-applog-read",
    "fs:allow-applog-write",
    "fs:allow-log-read",
    "fs:allow-log-write",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**",
        "$APPDATA/**",
        "$APPLOCALDATA/**",
        "$DESKTOP/**",
        "$DOCUMENT/**",
        "$DOWNLOAD/**",
        "$VIDEO/**",
        "$LOG/**"
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$APPDATA/logs"
        },
        {
          "path": "$LOG"
        }
      ]
    }
  ]
}